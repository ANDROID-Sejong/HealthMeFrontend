<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exercise.custompage03.exercise_select_exercise"
    android:background="@drawable/exercise_new_background">

<!--
상단 바와 아래 비율 1:22+warp_content
-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--상단메뉴-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1.5"
            android:background="@drawable/exercise_custompages_upper_title_stroke"

            >
            <TextView
                android:id="@+id/cancelicon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="취소"
                android:textColor="#fff"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:paddingBottom="10dp"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Add routine"
                android:textColor="#fff"
                android:layout_weight="10"
                android:gravity="bottom|center_horizontal"
                android:textSize="20sp"
                android:paddingBottom="10dp"


                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight="1"

                />






        </LinearLayout>




        <TextView
            android:id="@+id/part_indicator"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="부위별 목록"
            android:textColor="#B9BDFE"
            android:textSize="15sp"
            android:layout_marginHorizontal="30dp"
            android:gravity="center_vertical"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/select_exercise_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18"
            tools:listitem="@layout/select_exercise_item_example"
            tools:itemCount="3"


        />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".3"/>

<!--        <Button-->
<!--            android:id="@+id/get"-->
<!--            android:text="get_exercise_list"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_weight="1"/>-->

        </LinearLayout>












</FrameLayout>