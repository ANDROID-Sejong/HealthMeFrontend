<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mypage.password_change">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:background="@drawable/body_measurement_backgrount_design"
            android:elevation="10dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                >

                <ImageView

                    android:id="@+id/backicon_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:paddingTop="9dp"
                    android:paddingBottom="9dp"
                    android:gravity="center|center_vertical"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:src="@drawable/back_icon"
                    android:clickable="true"

                    />
                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="비밀번호 변경"
                    android:layout_weight="7"
                    android:gravity="center|center_vertical"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold"

                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    />

            </LinearLayout>



            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/password_change_icon"
                android:layout_weight="3"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                android:background="@android:color/transparent"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:gravity="center"
                android:text="비밀번호 변경"

                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7"
                android:gravity="center"
                android:text="개인정보 보호를 위해 비밀번호를 변경해 주세요"
                android:textColor="#BCC0FF"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="5"


                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="기존 비밀번호 입력"
                        android:layout_marginTop="15dp"
                        android:textSize="18sp"
                        android:gravity="bottom"
                        android:textColor="#fff"
                        android:layout_marginLeft="30dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        >
                        <FrameLayout
                            android:id="@+id/birthday_output"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text=""
                            android:cursorVisible="false"
                            android:textColor="#fff"
                            android:textSize="20sp"
                            android:inputType="date"

                            android:background="@drawable/password_change_edittext_design"






                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                >
                                <EditText
                                    android:id="@+id/password1"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="10"
                                    android:text=""
                                    android:cursorVisible="false"
                                    android:textColor="#000"
                                    android:textSize="20sp"
                                    android:inputType="textPassword"
                                    android:background="@drawable/password_change_edittext_design"/>
                                <ImageView

                                    android:id="@+id/check1"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginVertical="10dp"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:src="@drawable/notcheck_icon_beta"
                                    />
<!--                                <Space-->
<!--                                    android:layout_width=""-->
<!--                                    android:layout_height=""-->




                            </LinearLayout>



                        </FrameLayout>





                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="새 비밀번호 입력"
                        android:layout_marginTop="15dp"
                        android:textSize="18sp"
                        android:gravity="bottom"
                        android:textColor="#fff"
                        android:layout_marginLeft="30dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        >
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text=""
                            android:cursorVisible="false"
                            android:textColor="#fff"
                            android:textSize="20sp"
                            android:inputType="date"

                            android:background="@drawable/password_change_edittext_design"






                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                >
                                <EditText
                                    android:id="@+id/password2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="10"
                                    android:text=""
                                    android:cursorVisible="false"
                                    android:textColor="#000"
                                    android:textSize="20sp"
                                    android:inputType="textPassword"
                                    android:background="@drawable/password_change_edittext_design"/>
                                <ImageView

                                    android:id="@+id/check2"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginVertical="10dp"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:src="@drawable/notcheck_icon_beta"
                                    />
                                <!--                                <Space-->
                                <!--                                    android:layout_width=""-->
                                <!--                                    android:layout_height=""-->




                            </LinearLayout>



                        </FrameLayout>


                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="15dp"
                        android:text="새 비밀번호 확인"
                        android:textSize="18sp"
                        android:gravity="bottom"
                        android:textColor="#fff"

                        android:layout_marginLeft="30dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="2"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        >
                        <FrameLayout

                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text=""
                            android:cursorVisible="false"
                            android:textColor="#fff"
                            android:textSize="20sp"
                            android:inputType="date"

                            android:background="@drawable/password_change_edittext_design"






                            >
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                >
                                <EditText
                                    android:id="@+id/password3"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="10"
                                    android:text=""
                                    android:cursorVisible="false"
                                    android:textColor="#000"
                                    android:textSize="20sp"
                                    android:inputType="textPassword"
                                    android:background="@drawable/password_change_edittext_design"/>
                                <ImageView

                                    android:id="@+id/check3"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginVertical="10dp"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:src="@drawable/notcheck_icon_beta"
                                    />
                                <!--                                <Space-->
                                <!--                                    android:layout_width=""-->
                                <!--                                    android:layout_height=""-->




                            </LinearLayout>



                        </FrameLayout>




                    </LinearLayout>






                </LinearLayout>



            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/change_accept"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_sample2"
                    android:text="변경하기"
                    android:textColor="#5B6A00"
                    />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>



            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

            </Space>


        </LinearLayout>


    </RelativeLayout>

