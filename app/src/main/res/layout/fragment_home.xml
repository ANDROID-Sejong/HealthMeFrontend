<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6A73FF"
    tools:context=".Home">

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:format12Hour="MM월 dd일"
        android:format24Hour="MM월 dd일"

        android:textColor="#FFFFFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="83dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:text="오늘의 응원 한 줄 " />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:background="@drawable/round_botton"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="20dp"
        android:text="그래도 해야지 어떡해!"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="80dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="209dp"
        android:layout_height="439dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="159dp"
        android:layout_marginEnd="42dp"
        android:src="@drawable/img" />

    <ImageView
        android:layout_width="600dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-134dp"
        android:layout_marginBottom="54dp"
        android:src="@drawable/img_1" />
    <!--
    11/09 건희 seekbar 가이드 제거
     style="@style/Widget.AppCompat.SeekBar.Discrete"

    -->
    <SeekBar
        android:id="@+id/seekBar"


        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:layout_marginStart="20dp"

        android:layout_marginTop="170dp"
        android:layout_marginBottom="50dp"
        android:clickable="false"
        android:max="100"
        android:min="0"
        android:progress="50"
        android:progressDrawable="@drawable/seekbar"
        android:rotation="270"


        android:thumb="@drawable/seekthumb"
        android:thumbOffset="00dp" />


</RelativeLayout>