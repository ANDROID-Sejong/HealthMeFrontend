<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exercise_main">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#000778"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/exercise_textclock_design"

                >
                <!-->
                                <Space
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    />
                -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="7"
                    >

                    <TextClock
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"

                        android:textColor="#BFC9D9"
                        android:textSize="15sp"
                        android:gravity="bottom"

                        android:format12Hour="yyyy년 MM월 dd일"
                        android:format24Hour="yyyy년 MM월 dd일"
                        />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:text="Exercise"

                        android:textColor="#fff"
                        android:textSize="40sp"
                        android:gravity="start"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:padding="15dp"
                    android:src="@drawable/seekbar_character5" />
            </LinearLayout>
        </FrameLayout>

        <Space
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_marginLeft="20dp"
            android:layout_weight=".5"
            android:textColor="#fff"
            android:textSize="15sp"

            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@drawable/exercise_summary_background_design"
            android:layout_marginHorizontal="15dp"






            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="93"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="198"
                        >


                    </LinearLayout>
                    <ProgressBar
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="99"
                        android:max="100"
                        android:progress="50"
                        android:indeterminate="false"




                        />

                    </LinearLayout>



                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="65">


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="65"
                    >


                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="65"
                    >


                </FrameLayout>
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="루틴"

            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:textColor="#E7F1FF"
            android:gravity="center_vertical"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            >

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Button"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/exercise_routine_background_design"
                        />
                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Button"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/exercise_routine_background_design"
                        />
                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Button"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/exercise_routine_background_design"
                        />
                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Button"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/exercise_routine_background_design"
                        />
                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Button"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/exercise_routine_background_design"
                        />
                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Button"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/exercise_routine_background_design"
                        />
                    <Button

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Button"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/exercise_routine_background_design"
                        />



                </LinearLayout>
            </HorizontalScrollView>
        </FrameLayout>

        <TextView
            android:id="@+id/textView10"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="추세"
            android:layout_marginLeft="20dp"
            android:textColor="#E7F1FF"
            android:gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_marginBottom="10dp"
            >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"

                android:background="@drawable/exercise_trend_background_design"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="12"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="141"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:layout_weight="100"
                            >


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="55"
                                >


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="23"
                                    android:text="연속 출석 일수"
                                    android:textColor="#00E88F"
                                    android:textSize="8sp"
                                    android:gravity="bottom|left"
                                    />
                                <Space
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="7"



                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:orientation="horizontal"
                                    android:layout_weight="25"
                                    >
                                    <!--wrapcontent로 구현-->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"

                                        android:text="145"

                                        android:textColor="#fff"
                                        android:gravity="left|center"
                                        />
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"

                                        android:orientation="vertical">


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="7"
                                            android:gravity="left|center"

                                            android:text="일"
                                            android:textColor="#fff"


                                            />


                                    </LinearLayout>

                                </LinearLayout>


                            </LinearLayout>

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="55"
                                android:layout_gravity="bottom"
                                android:src="@drawable/exercise_main_info_consumed_continuous_counter_icon"
                                />



                        </LinearLayout>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="55"
                            android:textSize="8sp"
                            android:text="코드로 구현"
                            android:textColor="#fff"
                            />


                    </LinearLayout>











                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"

                android:background="@drawable/exercise_trend_background_design"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="12"
                        />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="141"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:layout_weight="100"
                            >


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="55"
                                >


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="23"
                                    android:text="소모한 칼로리"
                                    android:textColor="#FF4646"
                                    android:textSize="8sp"
                                    android:gravity="bottom|left"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="7"
                                    android:text="하루 평균"
                                    android:textColor="#95B0F9"
                                    android:textSize="6sp"

                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:orientation="horizontal"
                                    android:layout_weight="25"
                                    >
<!--wrapcontent로 구현-->
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"

                                        android:text="1345"

                                        android:textColor="#fff"
                                        android:gravity="left|center"
                                        />
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"

                                        android:orientation="vertical">

                                        <Space
                                            android:layout_width="wrap_content"
                                            android:layout_height="0dp"
                                            android:layout_weight="13"

                                            />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="0dp"
                                            android:layout_weight="7"
                                            android:text=" Kcal"
                                            android:textSize="6sp"
                                            android:gravity="top"
                                            android:textColor="#fff"


                                            />
                                        <Space
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:layout_weight="3"

                                            />

                                    </LinearLayout>

                                </LinearLayout>


                            </LinearLayout>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="55"
                            android:layout_gravity="bottom"
                            android:src="@drawable/exercise_main_info_consumed_calories_icon"
                            />



                        </LinearLayout>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="55"
                            android:text="코드로 구현"
                            android:textSize="8sp"
                            android:textColor="#fff"
                            />


                    </LinearLayout>











                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>